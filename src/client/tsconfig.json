{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "client/*": ["./*"]
    },
    "types": ["vite/client"]
  },
  "include": ["**/*"],
  "exclude": ["dist"]
}
